#! /bin/sh

pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor -d I II III IV V 

bspc config window_gap          10

bspc config split_ratio          0.50
bspc config borderless_monocle    true
bspc config gapless_monocle       true
bspc config paddingless_monocle   true
bspc config focus_follows_pointer true
bspc config pointer_modifier mod1

# bspc rule -a "program" <comandos>
# comandos: ->
# state=floating follow=on
# desktop='^2'
# manage=off
bspc rule -a Thunar state=floating
bspc rule -a Navigator desktop='^2'
bspc rule -a burp-StartBurp state=floating 
# bspc
# $( xprop ) para obtener informaci√≥n de la ventana

feh --bg-fill /home/bytehxz/Documents/Entorno/LinuxConfig/Wallpapers/cat_min.png &

bash ~/.config/polybar/launch.sh --blocks &

picom --config ~/.config/picom/picom.conf &

bspc config border_width         4
bspc config focused_border_color "#bb9af7"
# bspc config focused_border_color "#7aa2f7"
bspc config normal_border_color "#282e3a"

xrandr --output Virtual1 --mode 1920x1080
